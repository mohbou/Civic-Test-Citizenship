<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
                                             android:layout_marginBottom="@dimen/grid_1x"
                                             android:layout_marginTop="@dimen/grid_1x">


    <TextView

            android:id="@+id/question_statement"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textSize="17sp"
            android:ellipsize="marquee"
            tools:text="The idea of self-governments in the first three words   of the Constitution. What are these words?"
            android:textColor="@color/colorPriorityText"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/question_toreview"/>


    <ImageView
            android:contentDescription="@string/select_to_review_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_review_unselected"
            android:id="@+id/question_toreview"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
             app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>